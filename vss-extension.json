{
    "manifestVersion": 1,
    "id": "updateconfig",
    "name": "Update Config",
    "version": "1.4.3",
    "public": true,
    "publisher": "digitalmedia34",
    "targets": [
        { "id": "Microsoft.VisualStudio.Services" }
    ],
    "description": "Update config variables in files.",
    "categories": [
        "Build and release"
    ],
    "tags": [
        "release",
        "build",
        "token",
        "replace",
        "variable",
        "substitution"
    ],
    "links": {
        "support": { "uri": "https://github.com/digitalmedia34/updateconfig/issues" }
    },
    "icons": {
        "default": "images/extension-icon.png"
    },
    "branding": {
        "color": "#1C3272",
        "theme": "dark"
    },
    "screenshots": [
        { "path": "images/screenshot-01.png" }
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/digitalmedia34/updateconfig"
    },
    "content": {
        "details": { "path": "README.md" },
        "license": { "path": "LICENSE.txt" }
    },
    "files": [
        { "path": "task" },
        {
            "path": "images",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "updateconfig-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": { "name": "task" }
        }
    ]
}
